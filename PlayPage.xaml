<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicFree.PlayPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:MusicFree.ViewModel">
    <ContentPage.BindingContext>
        <viewmodel:PlayViewModel />
    </ContentPage.BindingContext>
    <toolkit:DockLayout>
        <Grid ColumnDefinitions="*,*,*" toolkit:DockLayout.DockPosition="Bottom" HeightRequest="70">
            <Button BackgroundColor="AliceBlue" HeightRequest="50" WidthRequest="50" CornerRadius="50" Text="⏪️"></Button>
            <Button BackgroundColor="AliceBlue" HeightRequest="50" WidthRequest="50" CornerRadius="50" Text="⏩️" Grid.Column="2"></Button>
            <Button BackgroundColor="AliceBlue" HeightRequest="50" WidthRequest="50" CornerRadius="50" Text="{Binding PlayBtnText}"
                    Command="{Binding PlayCommand}" Grid.Column="1">
            </Button>
        </Grid>
        <Label Text="{Binding NowMusicNameText}" HorizontalTextAlignment="Center" Margin="10, 20" />
    </toolkit:DockLayout>

    <!-- <ContentPage.Content> -->
    <!--     <Label Text="{Binding NowMusicName}" /> -->
    <!-- </ContentPage.Content> -->
</ContentPage>